<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="com.lti.action.help" namespace="/jsp/help" extends="struts-default"> 
		<global-results>
			<result name="exception">/jsp/exception.jsp</result>
		</global-results>
		<global-exception-mappings>
			<exception-mapping result="exception" exception="java.lang.Exception"></exception-mapping>
		</global-exception-mappings>
		<action name="Upgrade" class="/jsp/help/Upgrade">
			<result name="success">/jsp/help/result.jsp</result>
			<result name="error">/jsp/error.jsp</result>
		</action>
		<action name="*" class="com.lti.action.TemplateAction">
			<result name="success" type="freemarker">
				/jsp/help/{1}.uftl
			</result>		
			<result name="withheader" >
				/jsp/withheader.jsp
			</result>					
		</action>		
	</package>
	
</struts>
